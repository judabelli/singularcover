{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "module": "commonjs",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "types" : ["node"],
    "paths": { "@angular/*": ["node_modules/@angular/*"] },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [ "src/**/*.ts", "node_modules/ng4-fittext/*.d.ts" ],
  "exclude": [ ],
  "atom": { "rewriteTsconfig": false }
}

